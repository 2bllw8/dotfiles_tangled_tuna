[alias]
    id = "! git-identity"
    identity = "! git-identity"
    root = "! cd \"./$(git rev-parse --show-cdup)\""
    skip = "! git-skip"
    unskip = "! git-unskip"

[color]
    ui = auto

[core]
    ignorecase = false
    include = priv.config

[diff]
    algorithm = "histogram"
    colorMoved = true
    tool = "vimdiff"

[difftool]
    prompt = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[init]
    defaultBranch = "main"

[log]
    date = "iso"

[merge]
    configstyle = "zdiff3"

[user]
    useConfigOnly = true
